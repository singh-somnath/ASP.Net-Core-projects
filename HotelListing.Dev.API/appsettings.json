{
  "ConnectionStrings": {
    "HotListingDBConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=HotelListing.Dev.API.DB;Trusted_Connection=True;MultipleActiveResultSets=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "WritTo": [
        {
          "Name": "File",
          "Args": {
            "path": "./log/log-.txt",
            "rollingInterval": "Day"
          }
        },
        {
          "Name": "Seq",
          "Args": {
            "serverUrl": "http://localhost:5341"
          }
        }
      ]
    }
  },
  "AllowedHosts": "*"
}
